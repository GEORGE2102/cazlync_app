rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isValidImageSize() {
      // Max 10MB per image
      return request.resource.size <= 10 * 1024 * 1024;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // LISTING IMAGES
    // ============================================
    
    match /listings/{listingId}/{allPaths=**} {
      // Anyone can read listing images (for browsing)
      allow read: if true;
      
      // Authenticated users can upload images for their listings
      allow create: if isAuthenticated() &&
                      isValidImageSize() &&
                      isValidImageType();
      
      // Owner or admin can update/delete
      allow update, delete: if isAuthenticated() &&
                              (isAdmin() || 
                               firestore.get(/databases/(default)/documents/listings/$(listingId)).data.sellerId == request.auth.uid);
    }
    
    // ============================================
    // USER PROFILE PHOTOS
    // ============================================
    
    match /users/{userId}/profile.{extension} {
      // Anyone can read profile photos
      allow read: if true;
      
      // Users can upload their own profile photo
      allow create, update: if isAuthenticated() &&
                              isOwner(userId) &&
                              isValidImageSize() &&
                              isValidImageType();
      
      // Users can delete their own profile photo
      allow delete: if isAuthenticated() &&
                      (isOwner(userId) || isAdmin());
    }
    
    // ============================================
    // VERIFICATION DOCUMENTS
    // ============================================
    
    match /verification/{userId}/{document} {
      // Only admins can read verification documents
      allow read: if isAdmin();
      
      // Users can upload their own verification documents
      allow create: if isAuthenticated() &&
                      isOwner(userId) &&
                      isValidImageSize();
      
      // Cannot update or delete verification documents
      allow update, delete: if false;
    }
    
    // ============================================
    // CHAT IMAGES (if implemented)
    // ============================================
    
    match /chats/{sessionId}/{imageId} {
      // Participants can read chat images
      allow read: if isAuthenticated();
      
      // Participants can upload chat images
      allow create: if isAuthenticated() &&
                      isValidImageSize() &&
                      isValidImageType();
      
      // Cannot update or delete chat images
      allow update, delete: if false;
    }
  }
}
